<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@color/ligh_gray"
                android:gravity="center">

                <TextView
                    android:id="@+id/crearcuenta_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registro_resgistro_usuario"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp">

                <TextView
                    android:id="@+id/Usuario_textView_registrarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usuario_registro_usuario"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp">

                <EditText
                    android:id="@+id/Usuario_editView_registrarUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="50sp">

                <TextView
                    android:id="@+id/password_textView_registrarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_registro_usuario"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp">

                <EditText
                    android:id="@+id/password_editView_registrarUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="50sp">

                <TextView
                    android:id="@+id/elige_textView_registrarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eligeimagen_registro"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="50sp">


                <ImageButton
                    android:id="@+id/imgselect1_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/kurisutina" />

                <ImageButton
                    android:id="@+id/imgselect2_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/kuroneko" />

                <ImageButton
                    android:id="@+id/imgselect3_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/kanna" />


                <ImageButton
                    android:id="@+id/imgselect4_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/gears" />

                <ImageButton
                    android:id="@+id/imgselect5_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/norespawn" />

                <ImageButton
                    android:id="@+id/imgselect6_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/albedo" />

                <ImageButton
                    android:id="@+id/imgselect7_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/raphtalia" />


                <ImageButton
                    android:id="@+id/imgselect8_imageButton_registrarUsuiario"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/mododiablo" />

            </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="50sp"
                android:layout_marginRight="20sp"
                android:gravity="center">

                <Button
                    android:id="@+id/terminarRegistro_button_registrarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terminarregistro_registrousuario"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>