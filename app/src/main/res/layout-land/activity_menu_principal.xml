<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Vistas.MenuPrincipalAcrivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/quiz" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/juego_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juego"
            android:background="@color/black"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/opciones_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones"
            android:background="@color/black"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/puntuacion_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PuntuaciÃ³n"
            android:background="@color/black"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/perfil_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/cambiar_usuario_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar de jugador"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"/>

</LinearLayout>