<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Temas"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginStart="40sp"
            android:text="Todos"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <CheckBox
            android:layout_width="0sp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Cine"/>
        <CheckBox
            android:layout_width="0sp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Deporte"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <CheckBox
            android:layout_width="0sp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Musica"/>
        <CheckBox
            android:layout_width="0sp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Historia"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <CheckBox
            android:layout_width="0sp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Smash"/>
        <CheckBox
            android:layout_width="0sp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Varios"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. de Preguntas"
            android:textSize="30sp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facil"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medio"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dificil"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>